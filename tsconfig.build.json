{
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./.ts-temp",
    "outDir": "./.ts-temp",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "black-box": ["./packages/00.black-box/src/index.ts"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "./libdefs/*.js",
    "**/__tests__/**",
    "**/dist/**",
    "**/npm/**",
    "**/node_modules/**",
    "./packages/lexical-devtools/**",
    "./packages/lexical-playground/**"
  ],
  "extends": "./tsconfig.json"
}
